extends ../layouts/base

block title
      title= "This is our Blog"
block content
  section.content
    each post in posts
      div.post
        h2
          a(href = "/#{post.url}") #{post.title}
        mixin postdate(post.date)
        !{post.content}
  aside.sidebar
    div.pagination
      h2 TEST
      p listPage
    include ../partials/latest-posts
    include ../partials/try
    include ../partials/key-features
